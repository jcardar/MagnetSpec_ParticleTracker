    "\n",
    "fig, ax = plt.subplots(figsize = (10,10))\n",
    "for ii in range(num_par):\n",
    "#     ax.plot(posx[ii], posy[ii],'.', label='$\\Delta t$ = %.2f /$\\omega_{c0}$' % (del_time.loc[ii][0]));\n",
