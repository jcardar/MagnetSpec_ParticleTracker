    "\n",
    "energy = [energy[ii]*0.511 - 0.511 for ii in range(num_par)];\n",
    "\n",
    "fig, ax = plt.subplots();\n",
    "ax.errorbar(energy[0::3], deflection_y[0::3], yerr = (deflection_y[1::3], deflection_y[2::3]), fmt='.', c='r');"
   ]
