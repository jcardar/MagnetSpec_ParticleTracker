    "\n",
    "#anim = animation.FuncAnimation(fig, animate, init_func=init, frames=360, interval=20, repeat=True)\n",
    "\n",
    "#anim.save('rotation_of_system_2.gif', fps=30, extra_args=['-vcodec', 'libx264'])#, writer='imagemagick')\n",
    "init()"
   ]
