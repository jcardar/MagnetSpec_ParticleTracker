    "    ax.add_patch(rect)\n",
    "\n",
    "num_screen = len(screen.index);\n",
    "for ii in range(num_screen):\n",
    "    screenX = np.array([screen[ii][1],screen[ii][1]+(screen[ii][7]*np.cos(np.deg2rad(screen[ii][6])))])*const.c/omega_c0\n",
